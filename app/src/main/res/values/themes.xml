<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeteoValueLive" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_light</item>
        <item name="colorOnPrimary">@color/lighter_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/turquoise</item>
        <item name="colorSecondaryVariant">@color/turquoise_dark</item>
        <item name="colorOnSecondary">@color/lighter_grey</item>

        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/lighter_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="warningBackgroundColor">@color/lighter_red</item>
        <item name="goodBackgroundColor">@color/lighter_green</item>

        <item name="android:textViewStyle">@style/Theme.MeteoValueLive.Widget.TextView</item>

        <item name="buttonStyle">@style/Theme.MeteoValueLive.Widget.Button</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.App.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.App.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6</item>

        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>

        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>

        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>

        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>

        <item name="textAppearanceOverline">@style/TextAppearance.App.Overline</item>

    </style>


    <style name="Theme.MeteoValueLive.Widget.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <style name="Theme.MeteoValueLive.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <style name="Theme.MeteoValueLive.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MeteoValueLive.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.MeteoValueLive.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>
</resources>